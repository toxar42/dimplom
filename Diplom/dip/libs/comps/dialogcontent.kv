#:import Colors libs.settings.settings.Colors
#:import Pathes libs.settings.settings.Pathes
<DialogWindow>:
    orientation: 'vertical'
    size_hint_y: None
    spacing: dp(10)
    height: dp(250)
    pos_hint: {'center_y': .5}
    MDLabel:
        text: "Введите дату и время посещения автосалона для просмотра автомобиля."
        theme_text_color: "Custom"
        text_color: get_color_from_hex(Colors().darkgrey)
        font_size: dp(16)
        adaptive_height: True
    MDTextField:
        id: date
        hint_text: "Выберите дату"
        mode: "rectangle"

    MDTextField:
        id: time
        hint_text: "Выберите время"
        mode: "rectangle"

    MDCard:
        md_bg_color: get_color_from_hex(Colors().lightgrey)
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: None, None
        size: dp(180), dp(40)
        ripple_behavior: True
        radius: dp(10)
        on_release:
            root.register()
        MDLabel:
            text: 'Записаться'
            theme_text_color: "Custom"
            bold: True
            font_size: dp(20)
            text_color: get_color_from_hex(Colors().lighttext)
            halign: 'center'
            valign: 'middle'