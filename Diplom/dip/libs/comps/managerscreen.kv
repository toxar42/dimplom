#:import Pathes libs.settings.settings.Pathes
#:import Colors libs.settings.settings.Colors
#:import get_color_from_hex kivy.utils.get_color_from_hex
<ManagerScreen>:
    on_enter:
        root.generate_notes()
    MDBoxLayout:
        id: userscreenbox
        orientation: 'vertical'
        adaptive_height: True
        size_hint_y: 1
        md_bg_color: 'white'
        Widget:
            size_hint_y: None
            height: dp(20)
        MDBoxLayout:
            size_hint: .9, None
            height: root.height / 3
            orientation: 'vertical'
            radius: dp(10)
            pos_hint: {'center_x': .5}
            md_bg_color: get_color_from_hex(Colors().lighttext)
            Widget:
                size_hint_y: None
                height: dp(10)
            Image:
                id: userimage
                source: Pathes().no_user_image
                pos_hint: {'center_x': .5}
                size: None, None
                size: dp(50), dp(50)
                padding: 0, dp(10), 0, 0
            MDBoxLayout:
                padding: dp(20), 0, 0, 0
                size_hint: 1, None
                height: dp(60)
                MDLabel:
                    id: usersurname
                    text: 'Фамилия'
                    text_color: get_color_from_hex(Colors().darkgrey)
                    font_size: dp(24)
                    theme_text_color: "Custom"
                    adaptive_height: True
                    pos_hint: {'center_y': .5}
                MDLabel:
                    id: username
                    text: 'Имя'
                    text_color: get_color_from_hex(Colors().darkgrey)
                    font_size: dp(24)
                    theme_text_color: "Custom"
                    adaptive_height: True
                    pos_hint: {'center_y': .5}
                MDIconButton:
                    icon: 'exit-to-app'
                    ripple_scale: 0
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex(Colors().darkgrey)
                    pos_hint: {'center_y': .5}
                    on_release:
                        root.exit()
        Widget:
            size_hint_y: None
            height: dp(20)
        MDBoxLayout:
            size_hint: .9, 1
            orientation: 'vertical'
            radius: dp(10)
            pos_hint: {'center_x': .5}
            md_bg_color: get_color_from_hex(Colors().lighttext)
            
            MDScrollView:
                id: scrollview
                pos_hint: {'center_x': 0.5}
                adaptive_height: True
                scroll_timeout: 100
                MDList:
                    id: list
                    padding: dp(10), dp(10), dp(10), dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    adaptive_height: True
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    halign: 'center'
                    spacing: dp(10)
        Widget:
            size_hint_y: None
            height: dp(20)