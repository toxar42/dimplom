#:import Pathes libs.settings.settings.Pathes
#:import Colors libs.settings.settings.Colors
#:import get_color_from_hex kivy.utils.get_color_from_hex
<CatalogScreen>:
    on_enter:
        root.generate_notes()
    MDBoxLayout:
        id: userscreenbox
        orientation: 'vertical'
        adaptive_height: True
        size_hint_y: 1
        md_bg_color: 'white'
        Widget:
            size_hint_y: None
            height: dp(20)
        MDLabel:
            text: 'Каталог'
            text_color: get_color_from_hex(Colors().darkgrey)
            font_size: dp(32)
            bold: True
            theme_text_color: "Custom"
            halign: 'left'
            adaptive_height: True
            padding: dp(20), 0, 0, 0
        Widget:
            size_hint_y: None
            height: dp(20)
        MDBoxLayout:
            size_hint: .9, 1
            orientation: 'vertical'
            pos_hint: {'center_x': .5}
            MDScrollView:
                id: scrollview
                pos_hint: {'center_x': 0.5}
                adaptive_height: True
                scroll_timeout: 100
                MDList:
                    id: list
                    padding: dp(10), dp(10), dp(10), dp(10)
                    size_hint_y: None
                    height: self.minimum_height
                    adaptive_height: True
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    halign: 'center'
                    spacing: dp(10)
        Widget:
            size_hint_y: None
            height: dp(20)
        